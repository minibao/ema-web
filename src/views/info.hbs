    <div class="detail">
        <div class="weui_cells weui_cells_access" style="min-height: 500px" v-if="!showAll">
            <div class="no_match">近期没有参加比赛</div>
            <div class="detail-list">

                <div class="my-heros">
                    <div class="top-title">
                        <div>
                            <div class="four-t title-hero-01">英雄</div>
                            <div class="four-t title-times-02">场次</div>
                            <div class="four-t title-win-03">胜率</div>
                            <div class="four-t title-kda-04">KDA</div>
                        </div>
                    </div>
                    <div class="my-heros-list-box" v-for="item of userheros">
                        <div class="my-heros-list">
                            <div class="heros-head">
                                <img src="{{@static_url}}/imgs_static/heroes/\{{item.hero_img}}" alt="">
                            </div>
                            <div class="time-win">
                                <div class="up">
                                    <div class="times">\{{item.allNum}}</div>
                                    <div class="win">\{{item.rateOfWin}}</div>
                                </div>
                                <div class="bar">
                                    <div style="width: \{{item.rateOfWin}}" class="progress-bar"></div>
                                </div>
                            </div>
                            <div class="kda">
                                <div class="up">\{{item.kda}}</div>
                                <div class="down">
                                    <!--\{{item.killCount +"/"+ item.beKillCount +"/"+ item.assistCount}}--></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div style="display: none;" class="my-record">
                    <div class="my-record-list-box">
                        <a href="info_details?gameGuid=\{{battleitem.gameGuid}}&time=\{{battleitem.time}}&allTime=\{{battleitem.allTime}}&mapId=\{{battleitem.mapId}}"
                           v-for="battleitem of battle">
                            <div class="my-record-list">
                                <div class="heros-head"><img
                                        src="{{@static_url}}/imgs_static/heroes/\{{battleitem.hero_img}}" alt=""></div>
                                <div class="cont">
                                    <div class="up">
                                        <p v-if="battleitem._result=='胜利'"
                                           style="color:#1dc2aa"> \{{battleitem._result}}</p>
                                        <p v-if="battleitem._result=='失败'"
                                           style="color:#ff6666"> \{{battleitem._result}}</p>
                                        <p>\{{battleitem.killCount +"/"+ battleitem.beKilledCount +"/"+
                                            battleitem.assistCount}}</p>
                                    </div>
                                    <div class="down">
                                        <div>\{{battleitem._mapId}}</div>
                                        <div>\{{battleitem.date}}</div>
                                    </div>
                                    <div class="href-icon">
                                        <img src="{{@static_url}}/images/imgs-zhanji/hreficon.png" alt="">
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <a v-if="!isEnd" href="javascript:;" @click="getUserDataBattle()" class="load-more mr-t">点击加载更多</a>
                    <div v-if="isEnd" class="load-more mr-t">没有更多了</div>
                </div>

                <div style="display: none;" class="paihang">
                    <div style="background:#fff; text-align: center;font-size: 15px;width: 100%;color:#888888">
                        <span>\{{myrank}}</span>
                        <br>
                        <span>&nbsp;&nbsp;&nbsp;(排行榜每周清空并发放相关福利)</span>
                    </div>
                    <div>
                        <div class="title-pai">
                            <span style="width: 15%;font-weight:500;">名次</span>
                            <span style="width: 40%">角色名</span>
                            <span style="width: 30%">区服</span>
                            <span style="width: 15%">得分</span>
                        </div>
                        <div @click="showbangData(item.server,item.roleId)" server="\{{item.server}}"
                             role="\{{item.roleId}}" style="margin-top: 5px;" class="no showbangdata"
                             v-for="(index, item) in rank">
                            <span v-if="index == 0" style="width: 15%">
                                <img src="{{@static_url}}/images/imgs-zhanji/1.png" alt="">
                            </span>
                            <span v-if="index == 1" style="width: 15%">
                                <img src="{{@static_url}}/images/imgs-zhanji/2.png" alt="">
                            </span>
                            <span v-if="index == 2" style="width: 15%">
                                <img src="{{@static_url}}/images/imgs-zhanji/3.png" alt="">
                            </span>

                            <span v-if="index > 2" style="width: 15%">\{{index+1}} </span>
                            <span style="width: 40%">\{{item.name}}</span>
                            <span style="width: 30%">\{{item.servername}}</span>
                            <span style="width: 15%">\{{item.avgAll.toFixed(1)}}</span>
                        </div>
                    </div>
                </div>
