<div class="weui-tabbar">
    <a href="/users/info" v-bind:class="{ 'weui-bar__item_on': 1 == {{tabFlag}} }"
       class="weui-tabbar__item">
        <span style="display: inline-block;position: relative;">
            {{#eq tabFlag 1}}
                <i class="icon sprite-zhanji"> </i>
            {{else}}
                <i class="icon sprite-zhanji_grey"> </i>
            {{/eq}}
        </span>
        <p class="weui-tabbar__label">战绩</p>
    </a>

    <a href="/active/active" v-bind:class="{ 'weui-bar__item_on': 2 == {{tabFlag}} }" class="weui-tabbar__item">
        <span style="display: inline-block;position: relative;">
            {{#eq tabFlag 2}}
                <i class="icon sprite-fuli"></i>
            {{else}}
                <i class="icon sprite-fuli_grey"> </i>
            {{/eq}}
        </span>
        <p class="weui-tabbar__label">福利</p>
    </a>

    <a href="/yinling/active2" v-bind:class="{ 'weui-bar__item_on': 3 == {{tabFlag}} }" class="weui-tabbar__item">
        <span style="display: inline-block;position: relative;">
            {{#eq tabFlag 3}}
                <i class="icon sprite-shequ"></i>
            {{else}}
                <i class="icon sprite-shequ_grey"> </i>
            {{/eq}}
        </span>
        <p class="weui-tabbar__label">夺宝</p>
    </a>

    <a href="/yinling/user" v-bind:class="{ 'weui-bar__item_on': 4 == {{tabFlag}} }" class="weui-tabbar__item">
        <span style="display: inline-block;position: relative;">
            {{#eq tabFlag 4}}
                <i class="icon sprite-wode"> </i>
            {{else}}
                <i class="icon sprite-wode_grey"></i>
            {{/eq}}
        </span>
        <p class="weui-tabbar__label">我</p>
    </a>
</div>