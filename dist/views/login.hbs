<div class="swiper-container">
    <div class="swiper-wrapper">
        <div class="swiper-slide slide1"><img src="{{@static_url}}/images/login/bg02.a831de73.jpg" alt=""></div>
        <div class="swiper-slide slide2"><img src="{{@static_url}}/images/login/bg01.95e3dd8b.jpg" alt=""></div>
